rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /accounts/{accountId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == accountId;
    }

    // Allow anyone to read reviews for public display
    match /reviews/{reviewId} {
      allow read: if true;
    }

    // Logs collection - only allow server-side writes (via Admin SDK)
    // Client reads are restricted to authenticated admin users
    match /logs/{logId} {
      allow read: if false; // Disable client reads, use server actions
      allow write: if false; // Disable client writes, use server actions via API
    }
  }
}