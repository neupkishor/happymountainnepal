
{
  "entities": {
    "Account": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Account",
      "type": "object",
      "description": "Represents a user account for the Trek Explorer application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Account entity, matching the Firebase Auth UID."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number (optional)."
        }
      },
      "required": [
        "id",
        "fullName",
        "email"
      ]
    },
    "SiteProfile": {
      "title": "Site Profile",
      "type": "object",
      "description": "Stores site-wide company profile information.",
      "properties": {
        "reviewCount": {
          "type": "number",
          "description": "Total number of reviews."
        },
        "contactEmail": {
          "type": "string",
          "format": "email",
          "description": "Primary contact email address."
        },
        "phone": {
          "type": "string",
          "description": "Primary contact phone number."
        },
        "address": {
          "type": "string",
          "description": "Company's physical address."
        },
        "heroTitle": {
          "type": "string",
          "description": "The main title for the homepage hero section."
        },
        "heroDescription": {
          "type": "string",
          "description": "The main description for the homepage hero section."
        },
        "footerTagline": {
          "type": "string",
          "description": "The company tagline displayed in the footer."
        },
        "heroImage": {
          "type": "string",
          "description": "The background image URL for the homepage hero section."
        },
        "socials": {
          "type": "object",
          "description": "An object containing URLs for social media profiles.",
          "properties": {
            "facebook": {
              "type": "string",
              "format": "uri"
            },
            "instagram": {
              "type": "string",
              "format": "uri"
            },
            "twitter": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "whyUs": {
          "type": "array",
          "description": "List of reasons to choose the company, featured on the homepage.",
          "items": {
            "type": "object",
            "properties": {
              "icon": {
                "type": "string",
                "description": "URL of the icon for the feature."
              },
              "title": {
                "type": "string",
                "description": "Title of the feature."
              },
              "description": {
                "type": "string",
                "description": "Description of the feature."
              }
            },
            "required": ["icon", "title", "description"]
          }
        }
      }
    },
    "LegalDocument": {
      "title": "Legal Document",
      "type": "object",
      "description": "Represents a legal document like a license or certificate.",
      "properties": {
        "title": {
          "type": "string",
          "description": "The official title of the document."
        },
        "description": {
          "type": "string",
          "description": "An optional description of the document."
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "The URL to the uploaded document file."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the document was added."
        }
      },
      "required": ["title", "url", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/accounts/{accountId}": {
      "schema": {
        "$ref": "#/entities/Account"
      },
      "description": "Stores user account information, where the document ID matches the Firebase Auth UID."
    },
    "/profile/{siteId}": {
      "schema": {
        "$ref": "#/entities/SiteProfile"
      },
      "description": "Stores the site-wide company profile. The document ID should be a unique site identifier, e.g., 'happymountainnepal'."
    },
    "/legalDocuments/{documentId}": {
      "schema": {
        "$ref": "#/entities/LegalDocument"
      },
      "description": "Stores references to legal documents."
    }
  }
}
