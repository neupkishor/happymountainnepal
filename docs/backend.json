{
  "entities": {
    "Account": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Account",
      "type": "object",
      "description": "Represents a user account for the Trek Explorer application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Account entity, matching the Firebase Auth UID."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number (optional)."
        }
      },
      "required": [
        "id",
        "fullName",
        "email"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/accounts/{accountId}": {
      "schema": {
        "$ref": "#/entities/Account"
      },
      "description": "Stores user account information, where the document ID matches the Firebase Auth UID."
    }
  }
}